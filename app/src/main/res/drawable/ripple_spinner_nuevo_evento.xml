<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false" android:drawable="@drawable/shape_background_nuevo_evento" />
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <item android:drawable="@drawable/shape_background_nuevo_evento" />
            <item >
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle" android:gravity="center" >
                    <solid android:color="#757ab41e" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>